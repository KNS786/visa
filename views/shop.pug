doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title My Shop 
        link(rel="stylesheet", href="/css/main.css")
    body 
        header.header
            nav.nav-header
               ul.main_header_itemList
                    li.main_header_item
                        a.active(href="/") Shop
                    li.main_header_item
                        a(href="/admin/add-product") Add Product 
        main
            if products.length > 0
                .grid
                    each product in products
                        article.card.product-item
                            header.card__header    
                                h1.product__title #{product.title}
                            div.card__image
                                img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTxrHz9SDVYdPiANhqslrcJAczUZ0UPqc0SxA&usqp=CAU", alt="A Book") 
                            div.card__content
                                h2.product__price $89.21
                            .card__actions
                                button.btn Add to Card 
            else 
                h1 No products 